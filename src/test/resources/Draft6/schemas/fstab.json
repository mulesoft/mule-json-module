{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "title": "/etc/fstab",
    "description": "JSON representation of /etc/fstab",
    "type": "object",
    "properties": {
        "swap": {
            "$ref": "#/definitions/mntent"
        }
    },
    "patternProperties": {
        "^/([^/]+(/[^/]+)*)?$": {
            "$ref": "#/definitions/mntent"
        }
    },
    "required": [ "/", "swap" ],
    "additionalProperties": { "not":  {} },
    "definitions": {
        "mntent": {
            "title": "mntent",
            "description": "An fstab entry",
            "type": "object",
            "properties": {
                "device": {
                    "type": "string"
                },
                "fstype": {
                    "type": "string"
                },
                "options": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string" }
                },
                "dump": {
                    "type": "integer",
                    "minimum": 0
                },
                "fsck": {
                    "type": "integer",
                    "minimum": 0
                }
            },
            "required": [ "device", "fstype" ],
            "additionalItems": { "not":  {} }
        }
    }
}